# Maintainer: Yazeed Al Oyoun <me@yazeed.com>
pkgname=proc
pkgver=1.2.3
pkgrel=1
pkgdesc="Semantic process management CLI"
arch=('x86_64' 'aarch64')
url="https://github.com/yazeed/proc"
license=('MIT')
depends=('gcc-libs')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/yazeed/proc/archive/v$pkgver.tar.gz")
sha256sums=('c2d466352ef48d77f3722fc446b2f26b51403097f548f768117ecd6c83d75659')

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/proc" "$pkgdir/usr/bin/proc"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
