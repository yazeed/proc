# Maintainer: Yazeed Al Oyoun <me@yazeed.com>
pkgname=proc
pkgver=1.3.3
pkgrel=1
pkgdesc="Semantic CLI tool for process management. Target by port, PID, name or path."
arch=('x86_64' 'aarch64')
url="https://github.com/yazeed/proc"
license=('MIT')
depends=('gcc-libs')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/yazeed/proc/archive/v$pkgver.tar.gz")
sha256sums=('a912bf9b2f8d4efbb217c619609fd155220dbbd7ffa898f7f897f07ead79e97c')

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --locked
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm755 "target/release/proc" "$pkgdir/usr/bin/proc"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
